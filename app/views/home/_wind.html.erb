<% if @wind_direction and @wind_speed and @city_id %>
  <div class="row" style="margin-top: 30px">
    <div class="col-md-12">
      <div align="center">
        <h3 style="font-weight: bold">Dirección del Viento Actual</h3>
      </div>
      <div class="row row-centered" style="margin-top: 20px;">
        <div class="col-md-6 col-centered">
          <img style="display: inline-block" height="300px" src="<%= asset_path( get_wind_direction_image_path(@wind_direction) ) %>" />
          <div>
            <h3 style="display: inline-block; padding: 10px">Velocidad: <%= @wind_speed %> km/h</h3>
            <%= button_to "⟳", home_fetch_wind_conditions_path, form: {style: 'display:inline-block;'}, class:"btn btn-default", method: :get, remote: true, params: {:city =>{:city_id => @city_id}} %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>