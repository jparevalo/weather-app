    <% cities = GetCities.new().get_cities("santiago")[:cities] %>
    <% if cities.key?("Message") %>
      <div id="error_explanation">
        <h2>No se pudo consultar la lista de ciudades</h2>

        <ul>
          <li>Accuweather error: <%= cities["Message"] %></li>
        </ul>
      </div>
    <% else %>
      <%= form.select "selector", options_for_select(cities.map{|a| a["LocalizedName"] + ', ' + a["Country"]["LocalizedName"]}) %>
        <%= form.submit %>
    <% end %>
    <div class="actions">
  </div>
<% end %>
